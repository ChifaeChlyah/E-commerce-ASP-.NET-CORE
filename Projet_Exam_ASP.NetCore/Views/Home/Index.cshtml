    <style>
        #slide body {
            font-family: "Open Sans", sans-serif;
        }

        #slide h2 {
            color: #000;
            font-size: 26px;
            font-weight: 300;
            text-align: center;
            text-transform: uppercase;
            position: relative;
            margin: 30px 0 80px;
        }

            #slide h2 b {
                color: #ffc000;
            }

            #slide h2::after {
                content: "";
                width: 100px;
                position: absolute;
                margin: 0 auto;
                height: 4px;
                background: rgba(0, 0, 0, 0.2);
                left: 0;
                right: 0;
                bottom: -20px;
            }

        #slide .carousel {
            margin: 50px auto;
            padding: 0 70px;
        }

            #slide .carousel .carousel-item {
                min-height: 330px;
                text-align: center;
                overflow: hidden;
            }

                #slide .carousel .carousel-item .img-box {
                    height: 160px;
                    width: 100%;
                    position: relative;
                }

                #slide .carousel .carousel-item img {
                    max-width: 100%;
                    max-height: 100%;
                    display: inline-block;
                    /*position: absolute;*/
                    bottom: 0;
                    margin: 0 auto;
                    left: 0;
                    right: 0;
                }

                #slide .carousel .carousel-item h4 {
                    font-size: 18px;
                    margin: 10px 0;
                }

                #slide .carousel .carousel-item .btn {
                    color: #333;
                    border-radius: 0;
                    font-size: 11px;
                    text-transform: uppercase;
                    font-weight: bold;
                    background: none;
                    border: 1px solid #ccc;
                    padding: 5px 10px;
                    margin-top: 5px;
                    line-height: 16px;
                }

                    #slide .carousel .carousel-item .btn:hover, .carousel .carousel-item .btn:focus {
                        color: #fff;
                        background: #000;
                        border-color: #000;
                        box-shadow: none;
                    }

                    #slide .carousel .carousel-item .btn i {
                        font-size: 14px;
                        font-weight: bold;
                        margin-left: 5px;
                    }

            #slide .carousel .thumb-wrapper {
                text-align: center;
                background: #dee2e640;
            }

            #slide .carousel .thumb-content {
                padding: 15px;
            }



        #slide .carousel-control-prev i, .carousel-control-next i {
            font-size: 30px;
            position: absolute;
            top: 50%;
            display: inline-block;
            margin: -16px 0 0 0;
            z-index: 5;
            left: 0;
            right: 0;
            color: rgba(0, 0, 0, 0.8);
            text-shadow: none;
            font-weight: bold;
        }


        #slide .carousel .item-price {
            font-size: 1.3em;
            padding: 2px 0;
        }

            #slide .carousel .item-price strike {
                color: #999;
                margin-right: 5px;
            }

            #slide .carousel .item-price span {
                color: #bd5757;
                font-size: 110%;
            }

        #slide .carousel .carousel-indicators {
            bottom: -50px;
        }

        #slide .carousel-indicators li, .carousel-indicators li.active {
            width: 10px;
            height: 10px;
            margin: 4px;
            border-radius: 50%;
            border-color: transparent;
            border: none;
        }

        #slide .carousel-indicators li {
            background: rgba(0, 0, 0, 0.2);
        }

            #slide .carousel-indicators li.active {
                background: rgba(0, 0, 0, 0.6);
            }

        #slide .star-rating li {
            padding: 0;
        }

        #slide .star-rating i {
            font-size: 14px;
            color: #ffc000;
        }
        a {
            cursor: pointer;
        }

        .fa-heart {
            color: #e03939;
        }

        .fa-heart:hover {
            color: #e0393985;
        }
    </style>
