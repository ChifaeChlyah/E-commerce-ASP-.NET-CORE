@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout2.cshtml";

}
@using Projet_Exam_ASP.NetCore.Data.enums

@*----------------------------------------------------------------------------*@




<body onload="particulier();">
    <style>
    /**uuuuuuu*/
    .mynavnav input[type="radio"] {
        display: none;
    }

        .mynavnav input[type="radio"]:checked + div {
            background-color: #203b4c;
            border-radius: 1.5rem;
            color: #fff;
        }
    /*Profile Pic Start*/
        .picture-container {
            position: relative;
            text-align: center;
            padding-right: 20%;
            padding-left: 20%;
            padding-top: 30px;
            padding-bottom: 20px;
        }

        .picture {
            width: 130px;
            height: 130px;
            background-color: #999999;
            border: 4px solid #CCCCCC;
            color: #FFFFFF;
            border-radius: 50%;
            @*margin: 0px auto;*@
            overflow: hidden;
            transition: all 0.2s;
            -webkit-transition: all 0.2s;
        }

        .picture:hover {
            border-color: #2ca8ff;
        }

    .content.ct-wizard-green .picture:hover {
        border-color: #05ae0e;
    }

    .content.ct-wizard-blue .picture:hover {
        border-color: #3472f7;
    }

    .content.ct-wizard-orange .picture:hover {
        border-color: #ff9500;
    }

    .content.ct-wizard-red .picture:hover {
        border-color: #ff3b30;
    }

        .picture input[type="file"] {
            cursor: pointer;
            display: block;
            height: 126px;
            left: 44%;
            opacity: 0 !important;
            position: absolute;
            width: 126px;
        }

    .picture-src {
        width: 100%;
    }
    /*Profile Pic End*/
    </style>
    <div class=" register" style=" min-height: 719px; margin-top: 40px;">
        <div class="row" style="min-height: 605px;">
            <div class="col-md-3 register-left">
                <img src="~/Images/Image5.png" />
                <h3>Welcome</h3>
                <p>Shop and Improve your Commerce Activities</p>
                <input type="submit" name="" value="Login" /><br />
            </div>

            <div class="col-md-9 register-right">
                <form asp-route-returnUrl="@Model.ReturnUrl" method="post" enctype="multipart/form-data">


                    <div class="nav nav-tabs nav-justified mynavnav" style="background: #cfd8e1;">
                        <input type="radio" required asp-for="Input.Status" id="Particulier" value=@StatutPropriétaire.Particulier onchange="particulier();" checked />
                        <div class="nav-item ">
                            <label for="Particulier" style="margin-bottom: 4px; margin-top: 4px;">@StatutPropriétaire.Particulier</label>
                            <span asp-validation-for="Input.Status" class="text-danger"></span>
                        </div>
                        <input type="radio" required asp-for="Input.Status" id="Société" value=@StatutPropriétaire.Société onchange="boutique();" />
                        <div class="nav-item">
                            <label for="Société" style="margin-bottom: 4px; margin-top: 4px;">@StatutPropriétaire.Société</label>
                            <span asp-validation-for="Input.Status" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="tab-content">
                        <div class="tab-pane active">
                            <!---->

                            <div class="picture-container">
                                <div class="picture" style="margin-left: 40%; margin-top: 40px; margin-bottom: 20px;">
                                    <img src="~/Images/Profil.png" class="picture-src" id="wizardPicturePreview" title="" style="object-fit: cover; height:100%;">
                                    <input accept="image/*" type="file" id="wizard-picture" class="picture-src valid" name="Input.ImageProfile" aria-invalid="false" style="vertical-align: middle;">
                                </div>
                                <h6 class=""></h6>

                            </div>

                            <!---->
                            <div class="row register-form" style="margin-top: 0%;padding-top: 0%;padding-right: 10%;padding-bottom: 10%;padding-left: 10%;">
                                <div class="col-md-6">

                                    <div class="form-group">

                                        <input asp-for="Input.Nom" class="form-control" placeholder="Nom" />
                                        <span asp-validation-for="Input.Nom" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">

                                        <input asp-for="Input.Email" class="form-control" placeholder="Email" />
                                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">

                                        <input asp-for="Input.Password" class="form-control" placeholder="Mot de passe" />
                                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">

                                        <input asp-for="Input.Telephone" class="form-control" placeholder="Telephone" />
                                        <span asp-validation-for="Input.Telephone" class="text-danger"></span>
                                    </div>

                                    <div id="boutique" class="form-group">
                                        <div class="form-group">
                                            <label asp-for="Input.NomBoutique"></label>
                                            <input asp-for="Input.NomBoutique" class="form-control" />
                                            <span asp-validation-for="Input.NomBoutique" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="Input.DescriptionBoutique"></label>
                                            <textarea asp-for="Input.DescriptionBoutique" class="form-control"></textarea>
                                            <span asp-validation-for="Input.DescriptionBoutique" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="Input.VilleBoutique"></label>
                                            <input asp-for="Input.VilleBoutique" class="form-control" />
                                            <span asp-validation-for="Input.VilleBoutique" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="Input.AdresseBoutique"></label>
                                            <input asp-for="Input.AdresseBoutique" class="form-control" />
                                            <span asp-validation-for="Input.AdresseBoutique" class="text-danger"></span>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">

                                        <input asp-for="Input.Prenom" class="form-control" placeholder="Prenom" />
                                        <span asp-validation-for="Input.Prenom" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">

                                        <input @*asp-for="Input.Prenom"*@ class="form-control" placeholder="Confirmer Email" />
                                        <span @*asp-validation-for="Input.Prenom"*@ class="text-danger"></span>
                                    </div>
                                    <div class="form-group">

                                        <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="Confirmer Mot de passe" />
                                        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">

                                        <input asp-for="Input.Ville" class="form-control" placeholder="Ville" />
                                        <span asp-validation-for="Input.Ville" class="text-danger"></span>
                                    </div>



                                    <div id="boutique2" class="form-group">
                                        <div class="form-group">
                                            <label asp-for="Input.SiteBoutique"></label>
                                            <input asp-for="Input.SiteBoutique" class="form-control" />
                                            <span asp-validation-for="Input.SiteBoutique" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="Input.TelephoneBoutique"></label>
                                            <input asp-for="Input.TelephoneBoutique" class="form-control" />
                                            <span asp-validation-for="Input.TelephoneBoutique" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="Input.ImageBoutique"></label>
                                            <input asp-for="Input.ImageBoutique" accept="image/*" />
                                            <span asp-validation-for="Input.ImageBoutique" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <input type="submit" style="background-color: #203b4c;" class="btnRegister" value="Register" />
                                </div>
                            </div>
                        </div>

                    </div>
                </form>
            </div>

        </div>

    </div>
</body>























@*----------------------------------------------------------------------------*@
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<script src="https://code.jquery.com/jquery-1.12.4.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
<script>
    function particulier() {
        var element = document.getElementById('boutique');
        element.style.display = 'none';

        var element2 = document.getElementById('boutique2');
        element2.style.display = 'none';

        var element3 = document.getElementById('societyH3');
        element3.style.display = 'none';

        var element4 = document.getElementById('employerH3');
        element4.style.display = '';
    }
    function boutique() {
        var element = document.getElementById('boutique');
        element.style.display = '';

        var element2 = document.getElementById('boutique2');
        element2.style.display = '';

        var element3 = document.getElementById('societyH3');
        element3.style.display = '';

        var element4 = document.getElementById('employerH3');
        element4.style.display = 'none';
    }


    $(document).ready(function () {
        // Prepare the preview for profile picture
        $("#wizard-picture").change(function () {
            readURL(this);
        });
    });
    function readURL(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();

            reader.onload = function (e) {
                $('#wizardPicturePreview').attr('src', e.target.result).fadeIn('slow');
            }
            reader.readAsDataURL(input.files[0]);
        }
    }

</script>

